 ## --user python packages
export PATH=$PATH:/home/ed/.local/bin
export PATH=$PATH:/root/.local/bin

## pyenv ENV variables
# export PYENV_ROOT="$HOME/.local/bin/.pyenv"
# export PATH="$PYENV_ROOT/bin:$PATH"

## nvm directory
export NVM_DIR="$HOME/.nvm"

## node bin directory
export PATH=$PATH:$NVM_DIR/versions/node/v12.4.0/bin

export PATH=$PATH:$HOME/bin

## XDG specification compliant ENV Variables
export XDG_RUNTIME_DIR="/tmp/docker-500"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_MUSIC_DIR="$HOME/Music/"

## Composer system wide vendor bin directory
export PATH=$PATH:$HOME/.config/composer/vendor/bin

## Rust Cargo env config
source $HOME/.cargo/env

## FZF installation path for zsh
export FZF_BASE=/usr/bin/fzf

## i3ASS path
export PATH=$PATH:$HOME/Libraries/i3ass/i3ass/src

